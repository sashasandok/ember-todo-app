<footer local-class="footer">
  <span local-class="todo-count"><strong
    >{{this.todos.incomplete.length}}</strong>
    {{if this.todos.todoCountIsOne "todo" "todos"}}
    left</span>

  <ul local-class="filters">
    <li>
      <LinkTo @route="index">All</LinkTo>
      <LinkTo @route="active">Active</LinkTo>
      <LinkTo @route="completed">Completed</LinkTo>
    </li>
  </ul>

  <button
    type="button"
    local-class="clear-completed"
    {{on "click" this.todos.clearCompleted}}
  >
    Clear Completed</button>
</footer>